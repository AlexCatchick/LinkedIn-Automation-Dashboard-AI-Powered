{
  "name": "linkedin-automation",
  "version": "1.0.0",
  "description": "AI-powered LinkedIn sales automation platform",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "frontend",
    "worker",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run api\" \"npm run frontend\" \"npm run worker\"",
    "api": "cd api && node index.js",
    "frontend": "cd frontend && npm start",
    "worker": "cd worker && npm run dev",
    "build": "cd frontend && npm run build",
    "vercel-build": "cd frontend && npm install && npm run build",
    "install:all": "npm install && npm run install:api && npm run install:frontend && npm run install:worker",
    "install:api": "cd api && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:worker": "cd worker && npm install",
    "test": "npm run test:frontend",
    "test:frontend": "cd frontend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "LinkedIn Automation Team",
  "license": "MIT"
}
